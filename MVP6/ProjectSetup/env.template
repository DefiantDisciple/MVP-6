# Environment Configuration Template
# Copy this file to .env.local and update the values

# Preview Mode (set to true for development)
NEXT_PUBLIC_PREVIEW_MODE=true

# IC Network Configuration
# For local development
NEXT_PUBLIC_IC_HOST=http://127.0.0.1:4943

# For production (uncomment and update when deploying to IC mainnet)
# NEXT_PUBLIC_IC_HOST=https://ic0.app

# Canister IDs (will be auto-filled after deploying canisters)
# These will be populated from ic/.dfx/local/canister_ids.json after running dfx deploy
NEXT_PUBLIC_CORE_CANISTER_ID=
NEXT_PUBLIC_ESCROW_ADAPTER_CANISTER_ID=
NEXT_PUBLIC_AUDIT_CANISTER_ID=

# Production Canister IDs (for IC mainnet deployment)
# NEXT_PUBLIC_CORE_CANISTER_ID=your-production-core-canister-id
# NEXT_PUBLIC_ESCROW_ADAPTER_CANISTER_ID=your-production-escrow-canister-id
# NEXT_PUBLIC_AUDIT_CANISTER_ID=your-production-audit-canister-id
